<form id="formOffre" action="/post/<%= produit.id %>" method="post">
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#offreModal">
    Offre
</button>

<!-- Modal -->
<div class="modal" id="offreModal" tabindex="-1" aria-labelledby="offreModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="offreModalLabel">Faire une offre</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
                <div class="modal-body">
                    <input type="text" id="offre" name="offre" class="form-control">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <input type="submit" class="btn btn-primary" value="Valider">
                </div>
            </div>
        </div>
    </div>
</form>

